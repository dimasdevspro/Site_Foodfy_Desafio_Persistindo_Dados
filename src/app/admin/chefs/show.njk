{% extends "layout.njk" %}

{% block content %}
  <div class="comum_div">
    <section class="card_chef">

      <div class="adm-chef">
        <div style="float:left;">
          <label class="subtitles_chef_id">Chef:
            {{chef.name}}</label>
        </div>
        <div style="float:right;">
          <a href="/admin/chefs/chefs/{{chef.id}}/edit">
            <button id="edt" type="submit">Editar Chef</button>
          </a>
        </div>
      </div>

      <div class="img_chef_id">
        <img src="{{chef.avatar_url}}" alt=""/>
      </div>

      <div class="name_chef_id">
        <p>{{chef.name}}</p>
      </div>

      <div class="total_recipes_chef_id">
        <p>{{chef.total_recipes}}
          receitas</p>
      </div>
    </section>
    <section class="cards_recipes">

      {% for recipe in recipes %}

        <section class="card_link">
          <div class="img_recipe">
            <img src="{{recipe.image}}" alt=""/>
          </div>
        </section>
        <section class="card_link">
          <div class="title_recipe">
            <p>{{recipe.title}}</p>
          </div>
          <div class="author_recipe">
            <p>por
              {{recipe.author}}</p>
          </div>
          <a href="/admin/recipes/recipes/{{recipe.id}}" class="link-view">Visualizar</a>
        </section>
      {% endfor %}
    </section>
  </div>
  <script src="/scripts.js"></script>

{% endblock %}