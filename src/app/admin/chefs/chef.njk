{% extends "layout.njk" %}

{% block content %}

  <section class="card_chef">

    <div class="img_chef_id">
      <img src="{{item.image}}" alt=""/>
    </div>

    <div class="title_chef_id">
      <p>{{item.title}}</p>
    </div>

    <div class="author_chef_id">
      <p>{{item.author}}</p>
    </div>

    <div class="topic-ingredients">

      <div class="grid_chef_id">
        <p class="subtitles_chef_id">Ingredientes</p>
        <h4>Esconder</h4>
      </div>

      <div class="ingredients">
        <ul>
          {% for ingredient in item.ingredients %}
            <li>
              {{ingredient}}
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="topic-preparation">

      <div class="grid_chef_id">
        <p class="subtitles_chef_id">Modo de Preparo</p>
        <h4>Esconder</h4>
      </div>

      <div class="preparation">
        <ul>
          {% for preparation in item.preparations %}
            <li>
              {{preparation}}
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="topic-information">

      <div class="grid_chef_id">
        <p class="subtitles_chef_id">Informações Adicionais</p>
        <h4>Esconder</h4>
      </div>

      <div class="information">
        <p>{{item.informations}}</p>
      </div>
      
    </div>

  </section>

  <script src="scripts.js"></script>

{% endblock %}