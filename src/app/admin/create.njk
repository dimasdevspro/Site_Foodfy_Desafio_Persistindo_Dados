{% extends "layout.njk" %}

{% block content %}
    <div class="comum_div">
        <form class="form-newrecipe" method="post" action="/admin/recipes">
            <div class="adm-recipe">

                <div style="float:left">
                    <label >Criando Receita</label>
                </div>
                <div style="float:right">
                    <button id="sav" type="submit">Salvar Receita</button>
                </div>
            </div>

            <div class="field">
                <label for="">
                    Imagem
                </label>
                <input type="url" name="image" id="img" placeholder="http://">
            </div>

            <div class="field">
                <label for="">
                    Titulo
                </label>
                <input type="text" name="title" id="tit">
            </div>

            <div class="field">
                <label for="">
                    Autor
                </label>
                <input type="text" name="author" id="aut">
            </div>

            <div class="field" id="ingredients">
                <label for="ingredients">
                    Ingredientes
                </label>
                <div class="ingredients">
                    <input type="text" name="ingredients" id="ing">
                </div>
            </div>

            <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

            <div class="field" id="preparations">
                <label for="preparation">
                    Modo de preparo
                </label>
                <div class="preparations">
                    <input type="text" name="preparations" id="prep">
                </div>
            </div>

            <button type="button" class="add-preparation">Adicionar novo passo</button>

            <div class="field">
                <label for="add-info">
                    Informações adicionais
                </label>
                <textarea type="text" name="informations" id="info"></textarea>
            </div>
        </form>
    </div>
    <script src="/scripts.js"></script>

{% endblock %}