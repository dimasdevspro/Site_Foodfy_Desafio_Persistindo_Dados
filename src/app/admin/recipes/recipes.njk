{% extends "layout.njk" %}

{% block content %}

  <div id="admin-recipe-title">
    <p>Gerenciar Receitas</p>
    <a id="button-create" href="/admin/recipes/recipes/create">Cadastrar</a>
  </div>

  <section class="cards_recipes">

    {% for recipe in recipes %}

      <section class="card_link">
        <div class="img_recipe">
          <img src="{{recipe.image}}" alt=""/>
        </div>
      </section>
      <section class="card_link">
        <div class="title_recipe">
          <p>{{recipe.title}}</p>
        </div>
        <div class="author_recipe">
          <p>por {{recipe.author}}</p>
        </div>
        <a href="/admin/recipes/recipes/{{recipe.id}}" class="link-view">Visualizar</a>
      </section>
    {% endfor %}

  </section>
  <script src="/scripts.js"></script>
{% endblock %}