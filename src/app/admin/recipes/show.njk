{% extends "layout.njk" %}

{% block content %}
 <div class="comum_div">
  <section class="card_recipe">

<div class="adm-recipe">
  <div style="float:left;">
      <label class="subtitles_recipe_id">Receita:
        {{recipe.title}}</label>
  </div>
  <div style="float:right;">
      <a href="/admin/recipes/recipes/{{recipe.id}}/edit"><button id="edt" type="submit">Editar receita</button></a>
  </div>  
    </div>

    <div class="img_recipe_id">
      <img src="{{recipe.image}}" alt=""/>
    </div>

    <div class="title_recipe_id">
      <p>{{recipe.title}}</p>
    </div>

    <div class="author_recipe_id">
      <p>por {{recipe.author}}</p>
    </div>

    <div class="topic-ingredients">

      <div class="grid_recipe_id">
        <p class="subtitles_recipe_id">Ingredientes</p>
        <h4>Esconder</h4>
      </div>

      <div class="ingredients">
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>
              {{ingredient}}
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="topic-preparation">

      <div class="grid_recipe_id">
        <p class="subtitles_recipe_id">Modo de Preparo</p>
        <h4>Esconder</h4>
      </div>

      <div class="preparation">
        <ul>
          {% for preparation in recipe.preparations %}
            <li>
              {{preparation}}
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="topic-information">

      <div class="grid_recipe_id">
        <p class="subtitles_recipe_id">Informações Adicionais</p>
        <h4>Esconder</h4>
      </div>

      <div class="information">
        <p>{{recipe.informations}}</p>
      </div>

    </div>

  </section>
</div>
  <script src="/scripts.js"></script>

{% endblock %}